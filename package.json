{
  "name": "ola-finance-core",
  "scripts": {
    "clean": "rimraf ./typechain ./artifacts",
    "build": "npm run clean && npm run baseCompile",
    "mkdirs": "mkdirp logs && mkdirp clientsPackage && mkdirp bassPackage && mkdirp baasPackage/factories",
    "postinstall": "npm run mkdirs && npm run build",
    "baseCompile": "npx hardhat --config ./hardhat.base.config.ts compile",
    "readUniWatcherEvents": "npx hardhat --network fuse run scripts/uniWatcherEventsReader.ts",
    "deploy-hardhat": "npx hardhat deploy",
    "deploy-fuse": "npx hardhat deploy --network fuse --export exports/fuseExports.json",
    "deploy-system-fuse": "npx hardhat deploy --network fuse --export exports/fuseExports.json",
    "deploy-system-bsc": "npx hardhat deploy --network bsc --export exports/bscExports.json",
    "deploy-system-ropsten": "npx hardhat deploy --network ropsten --export exports/ropstenExports.json",
    "deploy-system-fantomOpera": "npx hardhat deploy --network fantomOpera --export exports/fantomOperaExports.json",
    "deploy-system-fantomTestnet": "npx hardhat deploy --network fantomTest --export exports/fantomTestnetExports.json",
    "deploy-system-maticMainnet": "npx hardhat deploy --network maticMainnet --export exports/maticMainnetExports.json",
    "deploy-system-celo": "npx hardhat deploy --network celo --export exports/celo.json",
    "deploy-system-avalancheCChain": "npx hardhat deploy --network avalancheCChain --export exports/avalancheCChainExports.json",
    "deploy-system-moonbeam": "npx hardhat deploy --network moonbeam --export exports/moonbeamExports.json",
    "deploy-system-boba": "npx hardhat deploy --network boba --export exports/bobaExports.json",
    "deploy-system-kcc": "npx hardhat deploy --network kcc --export exports/kccExports.json",
    "deploy-ln-fuse": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network fuse",
    "deploy-ln-bsc": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network bsc",
    "deploy-ln-ropsten": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network ropsten",
    "deploy-ln-fantomOpera": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network fantomOpera",
    "deploy-ln-fantomTestnet": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network fantomTest",
    "deploy-ln-maticMainnet": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network maticMainnet",
    "deploy-ln-celo": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network celo",
    "deploy-ln-avalancheCChain": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network avalancheCChain",
    "deploy-ln-moonbeam": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network moonbeam",
    "deploy-ln-boba": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network boba",
    "deploy-ln-kcc": "npx hardhat run scripts/lnDeployment/deployLendingNetwork.ts --network kcc",
    "fetch-ln-events-fuse": "npx hardhat run scripts/inquery/lendingNetwork/events/inquireAllEventsForLen.ts --network fuse --no-compile",
    "fetch-ln-events-fantomOpera": "npx hardhat run scripts/inquery/lendingNetwork/events/inquireAllEventsForLen.ts --network fantomOpera --no-compile",
    "fetch-ln-events-bsc": "npx hardhat run scripts/inquery/lendingNetwork/events/inquireAllEventsForLen.ts --network bsc --no-compile",
    "report-ropsten": "npx hardhat deploy --network ropsten --tags inquireAllEventsForLen --no-compile",
    "deployTestTokens-ropsten": "npx hardhat run scripts/deployTestErc20.ts --network ropsten",
    "verifyDeployedTestTokens-ropsten": "npx hardhat run scripts/verifyDeployedTestErc20.ts --network ropsten",
    "exportPackages": "npm run clientsPackage && npm run baasPackage",
    "clientsPackage": "node scripts/makeClientsPackage.js",
    "baasPackage": "node scripts/makeBaasPackage.js",
    "qnqPackage": "node scripts/makeQnQPackage.js",
    "liquidatorPackage": "node scripts/makeLiquidatorPackage.js",
    "plainLocalNode": "npx hardhat node --no-deploy --show-accounts",
    "process-len-state": "npx hardhat run scripts/inquery/lendingNetwork/events/inquireAllEventsForLen.ts --network fantomOpera --no-compile",
    "localNodeWithCore": "npx hardhat node --network hardhat",
    "readMirrorState-fuse": "npx hardhat readAllMirroredPairsState --network fuse",
    "inquire_ln_compoundLens": "npx hardhat run scripts/inquery/lendingNetwork/inquireThroughCompoundLens.ts --network fuse",
    "local_liquidatorMain_fuse": "npx hardhat run liquidator/liquidatorMain.ts --network fuse --no-compile",
    "hardcoded_addrainmaker_fuse_prime": "npx hardhat run scripts/adHok/addRainMakerForFusePrime.ts --network fuse",
    "saveStorageLayot": "npx hardhat printStorageLayout > storageLayout/layout_before.txt"
  },
